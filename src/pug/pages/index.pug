extends ../clear.pug
block headCssCustomStyle
    link(
        href='../plugins/bootstrap-datetimepicker/bootstrap-datetimepicker.css',
        rel='stylesheet',
        type='text/css'
    )
    link(
        href='../plugins/datepicker/datepicker.css',
        rel='stylesheet',
        type='text/css'
    )
    link(
        href='../plugins/sweetalert/sweetalert2.min.css',
        rel='stylesheet',
        type='text/css'
    )
    link(href='css/main.css', type='text/css', rel='stylesheet')
block mainContent
